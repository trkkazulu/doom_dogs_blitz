---
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-xl font-bold mb-4">Follow Us</h3>
        <div class="flex space-x-4">
          <a href="#" class="hover:text-red-500">Instagram</a>
          <a href="#" class="hover:text-red-500">Facebook</a>
          <a href="#" class="hover:text-red-500">Twitter</a>
        </div>
      </div>
      <div>
        <h3 class="text-xl font-bold mb-4">Contact</h3>
        <p>booking@doomdogs.com</p>
      </div>
      <div>
        <h3 class="text-xl font-bold mb-4">Newsletter</h3>
        <form class="flex">
          <input
            type="email"
            placeholder="Enter your email"
            class="bg-gray-800 text-white px-4 py-2 rounded-l"
          />
          <button class="bg-red-600 px-4 py-2 rounded-r hover:bg-red-700">Subscribe</button>
        </form>
      </div>
    </div>
    <div class="text-center mt-8">
      <p>&copy; {currentYear} Doom Dogs. All rights reserved.</p>
    </div>
  </div>
</footer>
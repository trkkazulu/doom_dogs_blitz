---
import MainLayout from '../../layouts/MainLayout.astro';
import { newsItems } from '../../data/news';
import { format } from 'date-fns';
---

<MainLayout title="News">
  <div class="container mx-auto px-4 py-24">
    <h1 class="text-4xl font-bold mb-12">Latest News</h1>
    <div class="grid gap-8 max-w-4xl">
      {newsItems.sort((a, b) => b.date.getTime() - a.date.getTime()).map(item => (
        <article class="bg-gray-800 rounded-lg overflow-hidden">
          <div class="p-8">
            <time class="text-gray-400 text-sm">
              {format(item.date, 'MMMM d, yyyy')}
            </time>
            <h2 class="text-2xl font-bold mt-2 mb-4">
              <a href={`/news/${item.slug}`} class="hover:text-red-500">
                {item.title}
              </a>
            </h2>
            <p class="text-gray-300 mb-4">{item.excerpt}</p>
            <a href={`/news/${item.slug}`} class="inline-block text-red-500 hover:text-red-400">
              Read More â†’
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</MainLayout>
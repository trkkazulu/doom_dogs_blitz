---
import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../components/Hero.astro';
import LatestNews from '../components/LatestNews.astro';
import UpcomingShows from '../components/UpcomingShows.astro';
import FeaturedMedia from '../components/FeaturedMedia.astro';
import AboutSection from '../components/AboutSection.astro';
---

<MainLayout title="Home">
  <Hero />

  <section class="py-16 bg-gray-900">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-8">Latest News</h2>
      <LatestNews />
    </div>
  </section>

  <AboutSection />

  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-8">Upcoming Shows</h2>
      <UpcomingShows />
    </div>
  </section>

  <section class="py-16 bg-gray-900">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-8">Featured Media</h2>
      <FeaturedMedia />
    </div>
  </section>
</MainLayout>